// COMPARISONS & CONDITIONS

// display true with comparison operator
x = 10;
y = 9;
console.log(x > y);

// display true when variables are equal
x = 10;
y = 10;
console.log(x == y);

// display true when variables are not equal
x = 10;
y = 5;
console.log(x != y);

// display conditional/ternary operator for variable
var age = 19;
var canVote = (age < 18) ? "Too young" : "Old enough";
console.log(canVote);

// equivalent statement to ^^^^ 
var age = 15;
if (age < 18){
    console.log("Too young");
} else {
    console.log("Old enough");
}

// IF statement
x = 5;
y = 3;
if (x > y){
    console.log("Hello World");
}

// IF/ELSE statement
x = 0;
y = 3;
if (x > y){
    console.log("Hello World");
} else{
    console.log("Goodbye World");
}

// switch statement to check multiple conditions
var fruit = 'apple';
switch(fruit){
    case "banana":
        console.log("Give that monkey a banana!");
        break
    case "orange":
        console.log("orange you gonna open the door?");
        break
    case "apple":
        console.log("how do you like them apples?");
        break
} 

// make switch statement with 'default' answer if none of the conditions are true
var fruit = 'celery';
switch(fruit){
    case "banana":
        console.log("Give that monkey a banana!");
        break
    case "orange":
        console.log("orange you gonna open the door?");
        break
    case "apple":
        console.log("how do you like them apples?");
        break
    default:
        console.log("is that even a fruit?");
} 
